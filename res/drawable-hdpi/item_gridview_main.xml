<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#3cb371" />     
      <stroke
          android:width="1dp"  
          android:color="#3cb371" />         
      <corners
          android:radius="2dp" />      
      <padding
          android:left="10dp"     
          android:top="10dp"
          android:right="10dp"       
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient 
          android:startColor="#3cb371"
          android:endColor="#20b2aa"
          android:angle="270" />
      <stroke
          android:width="1dp"   
          android:color="#075477" />
      <corners
          android:radius="2dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>

